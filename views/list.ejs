<%- include("header") -%>

<body>

    <div class="box" id="heading">
        <h1><%= list_heading %></h1>
    </div>
    
    <div class="box">
        <% for(var i=0;i<itemlist.length;i++){ %>
            <div class="item">
                <input type="checkbox">
                <p><%= itemlist[i] %></p> 
            </div>
        <% } %>

        <form class="item" action="/" method="post">
            <input type="text" name="item" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value=<%= list_heading %>>+</button>
        </form>
    </div>
        
    
</body>

<%- include("footer") -%>